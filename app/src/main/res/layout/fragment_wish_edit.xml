<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/calendar_background">

            <View
                android:layout_width="54dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_bottom_sheet_handle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_wish"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:src="@drawable/btn_wish_deactive_sv"
                    android:contentDescription="위시 버튼" />
            </LinearLayout>

            <EditText
                android:id="@+id/wish_title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새롭게 떠오른 위시가 있나요?"
                android:layout_marginTop="28dp"
                android:minHeight="28dp"
                android:textSize="16sp"
                android:background="@color/transparent"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:gravity="top|start" />

            <ImageView
                android:id="@+id/horizon_01_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_horizon_sv"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/todo_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_timer_sv"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/start_date_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="언젠가"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/todo_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_detail_text_sv"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/detail_text_et_02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="상세 내용 입력"
                        android:textColorHint="@color/text_primary"
                        android:minHeight="28dp"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:gravity="top|start" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/horizon_02_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:src="@drawable/ic_horizon_sv"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="13dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp" >

                    <TextView
                        android:id="@+id/wish_time_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="해당 위시를 진행하는 데 얼마나 걸릴까요?"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/noto_sans_kr_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_time_01"
                        android:layout_width="75dp"
                        android:layout_height="45dp"
                        android:text="10m"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_time_02"
                        android:layout_width="75dp"
                        android:layout_height="45dp"
                        android:text="20m"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_time_03"
                        android:layout_width="75dp"
                        android:layout_height="45dp"
                        android:text="30m"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_time_04"
                        android:layout_width="75dp"
                        android:layout_height="45dp"
                        android:text="1h~"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/horizon_03_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:src="@drawable/ic_horizon_sv"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="13dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp" >

                    <TextView
                        android:id="@+id/wish_category_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="위시의 카테고리를 지정해주세요"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/noto_sans_kr_medium" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_category_01"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="자기계발"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_category_02"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="운동"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_category_03"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="취미"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="80dp" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_category_04"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="일상"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_category_05"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="문화생활"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wish_category_06"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="휴식"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/text_primary"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@color/main_2" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_wish_register"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="등록할게요"
                    android:textSize="16sp"
                    android:layout_marginTop="22dp"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/text_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>