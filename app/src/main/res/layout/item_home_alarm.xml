<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42dp"
    android:layout_marginBottom="25dp"
    android:layout_marginVertical="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_sample_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/alarm_name_tv" />

    <TextView
        android:id="@+id/alarm_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="문혜원"
        android:textSize="11sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@id/alarm_title_tv"
        app:layout_constraintStart_toEndOf="@id/profile_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarm_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="-1dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:text="새롭게 온 요청이 있어요!"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/alarm_name_tv"
        app:layout_constraintStart_toStartOf="@id/alarm_name_tv"/>


    <TextView
        android:id="@+id/alarm_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="3분"
        android:textColor="@color/teumteum_deactive"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>